{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": ["./src"],
  "compilerOptions": {
    "jsx": "react",
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "skipLibCheck": true,
    "types": ["@types/bun"],
    "lib": ["es2017"]
  }
}
