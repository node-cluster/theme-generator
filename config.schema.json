{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Configuration for Site Theme Generator CLI",
  "type": "object",
  "properties": {
    "theme": {
      "type": "string",
      "enum": ["dark", "light"]
    },
    "colors": {
      "type": "object",
      "properties": {
        "canvas": {
          "type": "string",
          "description": "The color of the darkest/lightest background."
        },
        "type": {
          "type": "string",
          "description": "The color of the darkest/lightest text."
        },
        "typeLight": {
          "type": "string",
          "description": "The color of the lightest text (independent of theme)."
        },
        "red": {
          "type": "string",
          "description": "The base red color."
        },
        "green": {
          "type": "string",
          "description": "The base green color."
        },
        "blue": {
          "type": "string",
          "description": "The base blue color."
        },
        "yellow": {
          "type": "string",
          "description": "The base yellow color."
        },
        "orange": {
          "type": "string",
          "description": "The base orange color."
        },
        "purple": {
          "type": "string",
          "description": "The base purple color."
        },
        "pink": {
          "type": "string",
          "description": "The base pink color."
        },
        "slate": {
          "type": "string",
          "description": "The base slate color."
        },
        "turquoise": {
          "type": "string",
          "description": "The base turquoise color."
        },
        "grey": {
          "type": "string",
          "description": "The base grey color."
        }
      },
      "required": [
        "canvas",
        "type",
        "red",
        "green",
        "blue",
        "yellow",
        "orange",
        "purple",
        "pink",
        "slate",
        "turquoise",
        "grey"
      ],
      "additionalProperties": false
    },
    "outputs": {
      "type": "array",
      "description": "The list of outputs to send the result to.",
      "items": {
        "type": "string",
        "enum": ["typescript"]
      },
      "uniqueItems": true
    },
    "additionalProperties": false
  }
}
