{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Configuration for Site Theme Generator CLI",
  "type": "object",
  "properties": {
    "themes": {
      "type": "object",
      "properties": {
        "dark": {
          "type": "object",
          "description": "Background and foreground colors for the dark theme.",
          "properties": {
            "canvas": {
              "type": "string",
              "description": "The color of the darkest background."
            },
            "type": {
              "type": "string",
              "description": "The color of the lightest text."
            }
          },
          "required": ["canvas", "type"],
          "additionalProperties": false
        },
        "light": {
          "type": "object",
          "description": "Background and foreground colors for the light theme.",
          "properties": {
            "canvas": {
              "type": "string",
              "description": "The color of the lightest background."
            },
            "type": {
              "type": "string",
              "description": "The color of the darkest text."
            }
          },
          "required": ["canvas", "type"],
          "additionalProperties": false
        }
      }
    },
    "colors": {
      "type": "object",
      "properties": {
        "red": {
          "type": "string",
          "description": "The base red color."
        },
        "green": {
          "type": "string",
          "description": "The base green color."
        },
        "blue": {
          "type": "string",
          "description": "The base blue color."
        },
        "yellow": {
          "type": "string",
          "description": "The base yellow color."
        },
        "orange": {
          "type": "string",
          "description": "The base orange color."
        },
        "purple": {
          "type": "string",
          "description": "The base purple color."
        },
        "pink": {
          "type": "string",
          "description": "The base pink color."
        },
        "slate": {
          "type": "string",
          "description": "The base slate color."
        },
        "cyan": {
          "type": "string",
          "description": "The base cyan color."
        },
        "teal": {
          "type": "string",
          "description": "The base teal color."
        },
        "grey": {
          "type": "string",
          "description": "The base grey color."
        }
      },
      "required": ["red", "green", "blue", "yellow", "orange", "purple", "pink", "cyan", "teal", "slate", "grey"],
      "additionalProperties": false
    },
    "outputs": {
      "type": "array",
      "description": "The list of outputs to send the result to.",
      "items": {
        "type": "string",
        "enum": ["typescript"]
      },
      "uniqueItems": true
    },
    "additionalProperties": false
  }
}
